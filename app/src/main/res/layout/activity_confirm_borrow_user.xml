<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfrimBorrow">
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout1"
            android:background="#EAEAEA" >
        <TextView
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="เลขที่ใบยืม"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Bill_mock"
                android:textSize="20dp"
                android:layout_marginRight="10dp"/>
        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Bill"
                android:layout_toRightOf="@id/Bill_mock"
                android:textSize="20dp"
                android:layout_marginRight="10dp"/>
        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="*ชื่อผู้ขอใช้"
                android:layout_below="@id/Bill_mock"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_mock"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="นายประไภ XXXXXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_below="@id/Bill_mock"
                android:layout_toRightOf="@id/name_mock"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="*วันที่ยืม"
                android:layout_below="@id/name_mock"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Date_mock_lend"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="01/03/2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date_lend"
                android:layout_below="@id/name_mock"
                android:layout_toRightOf="@id/Date_mock_lend"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

        //Date return
        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="*วันที่คืน"
                android:layout_below="@id/Date_mock_lend"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Date_mock_return"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="19/03/2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date_re"
                android:layout_below="@id/Date_mock_lend"
                android:layout_toRightOf="@id/Date_mock_return"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="*หมายเหตุ"
                android:layout_below="@id/Date_mock_return"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Note_mock"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="เพื่อการศึกษา"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Note"
                android:layout_below="@id/Date_mock_return"
                android:layout_toRightOf="@id/Note_mock"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="ขอใช้ครุภัณฑ์เลขที่"
                android:layout_below="@id/Note_mock"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:id="@+id/eqs"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="XXX XXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eqs_id"
                android:layout_below="@id/Note_mock"
                android:layout_toRightOf="@id/eqs"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>

        <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="ชื่อ"
                android:layout_below="@id/eqs"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/name_eqs_mock"
                android:textSize="20dp"/>

        <TextView
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp"
                android:text="XXX XXX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_eqs"
                android:layout_below="@id/eqs"
                android:layout_toRightOf="@id/name_eqs_mock"
                android:textSize="20dp"
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"/>


    </RelativeLayout>
    <Button
            android:id="@+id/btnconfirm"
            android:text="บืนยันการขอใช้ครุภัณฑ์"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:background="#008577"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"

    />
</android.support.constraint.ConstraintLayout>
